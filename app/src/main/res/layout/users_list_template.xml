<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="4dp"
    android:layout_margin="4dp"
    >

<TableLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:stretchColumns="*"
    >

    <TableRow
        android:layout_width="0dp"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="18dp"
            >

            <TextView
                android:id="@+id/text1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="text uno"
                android:textColor="@color/greyButtons"
                android:textSize="@dimen/sub_title_letter"
                />

            <TextView
                android:id="@+id/cedula"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/big_letter"
                android:textColor="#000000"
                android:text="Cedula del usuario"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/promocion_linear"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="18dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="C贸digo de promoci贸n"
                android:textColor="@color/greyButtons"
                android:textSize="@dimen/sub_title_letter"
                />

            <TextView
                android:id="@+id/promocion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/big_letter"
                android:textColor="#000000"
                android:text="Cedula del usuario"
                />
        </LinearLayout>

    </TableRow>

    <TableRow
        android:padding="18dp"
        android:layout_width="0dp"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/text2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="text dos"
                android:textColor="@color/greyButtons"
                android:textSize="16sp"
                />


            <TextView
                android:id="@+id/nombre"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Nombre usuario"
                android:textColor="#000000"
                android:textSize="18sp"
                android:maxLines="3"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/text3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="text tres"
                android:textColor="@color/greyButtons"
                android:textSize="16sp"
                />

            <TextView
                android:id="@+id/telefono"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Telefono"
                android:textSize="18sp"
                android:textColor="#000000"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            >


            <TextView
                android:id="@+id/text4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="text cuatro"
                android:textColor="@color/greyButtons"
                android:textSize="16sp"
                />

            <TextView
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="toporondo@gmail.com"
                android:textSize="18sp"
                android:textColor="#000000"
                />
        </LinearLayout>


    </TableRow>

    <TableRow
        android:padding="18dp"
        android:layout_width="0dp"
        >

        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/text5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="text cinco"
                android:textColor="@color/greyButtons"
                android:textSize="16sp"
                />

            <TextView
                android:id="@+id/direccion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Direccion"
                android:textSize="18sp"
                android:textColor="#000000"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            >


            <TextView
                android:id="@+id/text6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="text seis"
                android:textColor="@color/greyButtons"
                android:textSize="16sp"
                />
            <TextView
                android:id="@+id/genero"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Genero"
                android:textSize="18sp"
                android:textColor="#000000"
                />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/linear_visiblitiy"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            >
            <Button

                android:id="@+id/btn_aceptar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="Aceptar"
                style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
                android:background="@color/yellowSmi"
                android:focusable="false"
                />
            <Button
                android:id="@+id/btn_rechazar"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.6"
                android:text="Rechazar"
                style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
                android:background="@color/blackSmi"
                android:textColor="#ffffff"
                android:focusable="false"
                />
        </LinearLayout>
    </TableRow>
    <TableRow
        android:padding="18dp"
        android:layout_width="0dp"
        >
        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fecha de creaci贸n"
                android:textColor="@color/greyButtons"
                android:textSize="16sp"
                />
            <TextView
                android:id="@+id/fecha_creacion"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Fecha no definida"
                android:textSize="18sp"
                android:textColor="#000000"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fecha de creaci贸n"
                android:textColor="@color/greyButtons"
                android:textSize="16sp"
                />
            <TextView
                android:id="@+id/tiempo_creacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tiempo no definido"
                android:textSize="18sp"
                android:textColor="#000000" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_fecha_aceptada"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fecha de Aceptaci贸n"
                android:textSize="16dp"
                android:textColor="@color/greyButtons"
                />
            <TextView
                android:id="@+id/fecha_aceptada"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fecha no definida"
                android:textColor="#000000"
                android:textSize="18sp"
                />
        </LinearLayout>
    </TableRow>
</TableLayout>
</android.support.v7.widget.CardView>